{
  "name": "edu21-server",
  "version": "1.0.0",
  "description": "Servidor backend para EDU21 - Plataforma Educativa",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:lab": "jest --testPathPattern=lab --coverage --collectCoverageFrom='routes/lab.js' --collectCoverageFrom='utils/lab-*.js'",
    "test:lab:watch": "jest --testPathPattern=lab --watch",
    "db:migrate": "node scripts/run-migration.js",
    "db:seed": "node scripts/load-lab-seed-data.js",
    "lab:setup": "npm run db:migrate && npm run db:seed",
    "lab:test:full": "npm run test:lab && npm run test:integration:lab",
    "test:integration:lab": "jest --testPathPattern=integration/lab",
    "lint": "eslint .",
    "lint:lab": "eslint routes/lab.js utils/lab-*.js",
    "lint:fix": "eslint . --fix",
    "audit:security": "npm audit --audit-level moderate",
    "health:check": "node -e \"console.log('Server health check passed')\"",
    "performance:lab": "node scripts/performance-test-lab.js",
    "db:pull:fix": "dotenv -e ../.env -- prisma db pull"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "openai": "^4.24.7",
    "pdfkit": "^0.14.0",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "education",
    "platform",
    "chile",
    "montessori",
    "laboratories",
    "bloom",
    "learning-objectives"
  ],
  "author": "EDU21 Team",
  "license": "MIT"
}
